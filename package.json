{
  "name": "frontend-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next build && next export",
    "build:analyze": "ANALYZE=true yarn build",
    "start": "next start",
    "lint:dev": "tslint -p ./tsconfig.json",
    "codegen:typing": "apollo client:codegen ./typings/gql.d.ts --localSchemaFile=schema.gql  --target typescript --watch --includes=./gql/* --outputFlat --namespace=gql"
  },
  "dependencies": {
    "@apollo/client": "^3.2.4",
    "graphql": "^15.3.0",
    "next": "9.5.5",
    "query-string": "^6.13.6",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-icons": "^3.11.0",
    "react-markdown": "^4.3.1",
    "styled-components": "^5.2.0",
    "styled-normalize": "^8.0.7",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.52",
    "@types/styled-components": "^5.1.4",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "msw": "^0.21.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
